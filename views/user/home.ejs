<%- include("../partials/user/header") %>

<style>
    .fashion-banner {
        padding: 50px 20px;
        text-align: center;
        border-radius: 10px;
        margin: 20px auto;
        color: #fff;
        font-family: 'Georgia', serif;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .fashion-banner h1 {
        font-size: 36px;
        font-weight: bold;
        margin-bottom: 10px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .fashion-banner p {
        font-size: 18px;
        margin: 0;
        font-style: italic;
    }

    .view-more-container {
        text-align: center;
        margin: 100px 0 30px;
    }

    .view-more-btn {
        display: inline-block;
        padding: 10px 20px;
        color: #fff;
        text-decoration: none;
        font-size: 16px;
        background: linear-gradient(90deg, #018cd2, #2575fc);
        border-radius: 3px;
        transition: transform 0.3s, box-shadow 0.3s;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
    }

    .view-more-btn:hover {
        transform: scale(1.05);
        box-shadow: 0 6px 8px rgba(0, 0, 0, 0.3);
    }

    .product-card {
        transition: transform 0.2s;
    }

    .product-card:hover {
        transform: scale(1.05);
    }
</style>

<body>
    <main class="main bg-light">
        <!-- New Banner Section -->
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="admin-assets/imgs/banner/banner6.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="admin-assets/imgs/banner/banner5.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="admin-assets/imgs/banner/banner7.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleSlidesOnly" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleSlidesOnly" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    

        <!-- Existing Sections -->
        <section class="home-slider position-relative pt-50">
            <!-- Slider Content -->
            <!-- Retain the slider code here -->
        </section>

        <section class="product-tabs section-padding position-relative wow fadeIn animated">
            <div class="container">
                <div class="d-flex justify-content-center my-5">
                    <h4>New Arrivals</h4>
                </div>


               

                <div class="container mt-5">
                    <div class="tab-content wow fadeIn animated" id="myTabContent">
                        <div class="tab-pane fade show active" id="tab-one" role="tabpanel" aria-labelledby="tab-one">
                            <div class="row" id="product-list">
                                <% for (let i = 0; i < products.length; i++) { %>
                                    <div class="col-md-4 col-lg-3 mb-4">
                                        <div class="card h-100 shadow-sm border-0 product-card">
                                            <!-- Product Image -->
                                            <% if (products[i].variantData && products[i].variantData.productImages && products[i].variantData.productImages.length > 0) { %>
                                                <img src="/uploads/re-image/<%= products[i].variantData.productImages[0] %>" 
                                                     class="card-img-top img-fluid" 
                                                     alt="<%= products[i].productName %>" 
                                                     style="height: 200px; object-fit: cover;">
                                            <% } else { %>
                                                <img src="/images/placeholder.png" 
                                                     class="card-img-top img-fluid" 
                                                     alt="No image available" 
                                                     style="height: 200px; object-fit: cover;">
                                            <% } %>
                
                                            <!-- Product Details -->
                                            <div class="card-body text-center">
                                                <h5 class="card-title text-truncate"><%= products[i].productName %></h5>
                
                                                <% const { variantData } = products[i]; %>
                                                <% if (variantData) { %>
                                                    <p class="card-text text-primary">â‚¹<%= variantData.salePrice %></p>
                                                <% } else { %>
                                                    <p class="card-text text-secondary">Price not available</p>
                                                <% } %>
                
                                                <div class="my-1">
                                                    <% if (variantData && variantData.quantity > 0) { %>
                                                        <span class="badge badge-success mb-2">In Stock: <%= variantData.quantity %></span>
                                                        <button class="btn btn-outline-primary btn-sm">Add to Cart</button>
                                                    <% } else { %>
                                                        <span class="badge badge-danger mb-2">Out of Stock</span>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div> 




            </div>

            <div class="view-more-container my-5">
                <a href="/shop" class="view-more-btn">View More Products</a>
            </div>

          

        </section>
    </main>
</body>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<%- include("../partials/user/footer") %>