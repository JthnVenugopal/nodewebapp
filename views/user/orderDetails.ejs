<%- include("../../views/partials/user/header") %>

<style>
    /* General Styling */
    body {
        background-color: #f8f9fa;
    }

    .container {
        margin-bottom: 12%;
    }

    /* Order Table Styling */
    .order-table {
        margin: 20px 0;
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 20px;
        background: linear-gradient(to bottom, #f5f5f5, #ffffff);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .order-table th {
        background-color: #007bff;
        color: white;
        text-align: center;
    }

    .order-table td, .order-table th {
        vertical-align: middle;
        text-align: center;
        padding: 15px;
    }

    .product-image {
        max-height: 100px;
        object-fit: cover;
        width: auto;
        border-radius: 5px;
    }

    .btn {
        font-size: 0.9rem;
    }

    .badge {
        font-size: 0.85rem;
        padding: 5px 10px;
    }
</style>

<body>
    <div class="container mt-5">
        <h3 class="text-center mb-4">Your Orders</h3>
        <p class="text-center mb-5"><strong>Email:</strong> <%= email %></p>

        <% orderDetails.forEach(order => { %>
            <div class="order-table shadow-sm p-4 rounded" id="order-box-<%= order._id %>">
                <h5 class="text-center">Order ID: <%= order.orderId %></h5>

                <!-- Order Status -->
                <p class="text-center">
                    <strong>Status:</strong>
                    <% if (order.status === "Cancelled") { %>
                        <span class="badge bg-danger text-dark"><%= order.status %></span>
                    <% } else if (order.status === "Delivered") { %>
                        <span class="badge bg-success text-dark"><%= order.status %></span>
                    <% } else { %>
                        <span class="badge bg-warning text-dark"><%= order.status %></span>
                    <% } %>
                </p>

                <!-- Payment Status -->
                <p class="text-center">
                    <strong>Payment Status:</strong>
                    <% if (order.status === "Cancelled") { %>
                        <span class="badge bg-warning">Refunded</span>
                    <% } else if (order.status === "Delivered") { %>
                        <span class="badge bg-success">Completed</span>
                    <% } else { %>
                        <span class="badge bg-success"><%= order.paymentStatus %></span>
                    <% } %>
                </p>

                <!-- Total Price -->
                <h4 class="text-center my-2"><strong>Total Price:</strong> ₹<%= order.totalPrice %></h4>

                <!-- Estimated Delivery -->
                <% if (order.status !== "Cancelled") { %>
                    <p class="text-center"><strong>Estimated Delivery:</strong> Dec 12, 2024</p>
                <% } %>

                <!-- Order Items Table -->
                <table class="table table-bordered table-striped mt-4">
                    <thead>
                        <tr>
                            <th>Product Image</th>
                            <th>Product Name</th>
                            <th>Brand</th>
                            <th>Price per item</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% order.orderedItems.forEach(item => { %>
                            <tr>
                                <td>
                                    <img class="img-fluid product-image" src="<%= item.productDetails.imageUrl %>" alt="<%= item.productDetails.productName %>">
                                </td>
                                <td><%= item.productDetails.productName %></td>
                                <td><%= item.productDetails.brand %></td>
                                <td>₹<%= item.productDetails.salePrice %></td>
                                <td>
                                    <% if (order.status === "Cancelled") { %>
                                        <span class="text-muted">Order Cancelled</span>
                                    <% } else if (order.status === "Delivered") { %>
                                        <span class="text-muted">Order Delivered</span>
                                    <% } else { %>
                                        <button style="font-size: 15px;" class="btn btn-danger btn-sm" onclick="cancelOrder('<%= order._id %>')">Cancel Order</button>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% }) %>
    </div>
</body>

<%- include("../../views/partials/user/footer") %>

<!-- Bootstrap JS and Popper.js -->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    function cancelOrder(orderId) {
        Swal.fire({
            title: 'Are you sure?',
            text: 'Do you really want to cancel this order? This action cannot be undone.',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, cancel it!',
            cancelButtonText: 'No, keep it',
        }).then((result) => {
            if (result.isConfirmed) {
                fetch('/cancelOrder', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ orderId }) 
                })
                    .then((response) => {
                        if (response.ok) {
                            return response.json();
                        } else {
                            throw new Error('Failed to cancel the order');
                        }
                    })
                    .then((data) => {
                        Swal.fire('Cancelled!', data.message, 'success');
                        const orderBox = document.querySelector(`#order-box-${orderId}`);
                        if (orderBox) {
                            orderBox.remove();
                        }
                    })
                    .catch((error) => {
                        console.error('Error cancelling the order:', error);
                        Swal.fire('Error!', 'An error occurred while cancelling the order. Please try again.', 'error');
                    });
            }
        });
    }
</script>
