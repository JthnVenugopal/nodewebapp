<%- include("../../views/partials/user/header") %>

<style>
    /* Order Box Styling */
    .order-box {
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        margin-bottom: 30px;
        width: 90%; /* Adjusted width */
        margin-left: auto;
        margin-right: auto;
    }

    .order-id {
        color: #007bff;
    }

    /* Product Box Styling */
    .product-box {
        text-align: center;
        transition: transform 0.3s ease-in-out;
    }

    .product-box:hover {
        transform: scale(1.05);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .product-image {
        max-height: 200px;
        object-fit: contain;
        width: 100%;
    }

    /* Modal Styling */
    .modal-content {
        border-radius: 8px;
    }

    .modal-header {
        background-color: #007bff;
        color: white;
    }

    .modal-body {
        padding: 20px;
    }

    /* Responsive Grid */
    @media (max-width: 768px) {
        .product-box {
            width: 100%;
            margin-bottom: 20px;
        }
    }
</style>

<!-- Bootstrap Container -->
<div class="container mt-4">
    <p class="text-center mb-5">Email: <%= email %></p>

    <% orderDetails.forEach(order => { %>
        <div class="order-box shadow-sm p-4 mb-4 rounded">
            <h2 class="order-id">Order ID: <%= order.orderId %></h2>
            <p>Status: <span class="badge bg-warning"><%= order.status %></span></p>
            <p>Payment Status: <span class="badge bg-info"><%= order.paymentStatus %></span></p>
            <p>Total Price: ₹<%= order.totalPrice %></p>

            <div class="row">
                <% order.orderedItems.forEach(item => { %>
                    <div class=" mb-4 ">
                        <div class="product-box shadow-sm p-3 rounded bg-light">
                            <h3><%= item.productName %></h3>
                            <p><strong>Description:</strong> <%= item.description %></p>
                            <p><strong>Brand:</strong> <%= item.brand %></p>
                            <p><strong>Quantity:</strong> <%= item.quantity %></p>
                            <p><strong>Price:</strong> ₹<%= item.salePrice %></p>
                            <img class="img-fluid product-image rounded mb-3" src="/uploads/re-image/<%= item.productImages[0] %>" alt="<%= item.productName %>">
                            <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#productModal<%= item._id %>">View Details</button>
                        </div>
                    </div>

                    <!-- Product Modal -->
                    <div class="modal fade" id="productModal<%= item._id %>" tabindex="-1" aria-labelledby="productModalLabel<%= item._id %>" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="productModalLabel<%= item._id %>"><%= item.productName %> - Details</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p><strong>Description:</strong> <%= item.description %></p>
                                    <p><strong>Brand:</strong> <%= item.brand %></p>
                                    <p><strong>Quantity:</strong> <%= item.quantity %></p>
                                    <p><strong>Price:</strong> ₹<%= item.salePrice %></p>
                                    <img class="img-fluid rounded" src="/uploads/re-image/<%= item.productImages[0] %>" alt="<%= item.productName %>">

                                    <div class="d-flex justify-content-center">
                                      <a href=""><button class="btn btn-danger my-5">Cancel Order</button></a>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    <% }) %>
</div>

<%- include("../../views/partials/user/footer") %>

<!-- Bootstrap JS and Popper.js (required for modal functionality) -->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
