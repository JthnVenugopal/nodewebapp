<%- include("../../views/partials/user/header") %>

<div class="container my-5">
  <h1 class="text-center">Order Details</h1>

  <% if (orders.length > 0) { %>
    <% orders.forEach(order => { %>
      <div class="card my-3">
        <div class="card-header">
          <strong>Order ID:</strong> <%= order.orderId %>
          <span class="float-right">Status: <%= order.status %></span>
        </div>
        <div class="card-body">
          <p><strong>Total Price:</strong> ₹<%= order.totalPrice %></p>
          <p><strong>Final Amount:</strong> ₹<%= order.finalAmount %></p>

          <h5>Ordered Items:</h5>
          <ul class="list-group">
            <% order.orderedItems.forEach(item => { %>
              <% if (item.productDetails && item.productDetails.length > 0) { %>
                <% const product = item.productDetails[0]; %>
                <li class="list-group-item d-flex align-items-center">
                  <img 
                    src="<%= product.image %>" 
                    alt="<%= product.name %>" 
                    class="img-thumbnail mr-3" 
                    style="width: 100px; height: 100px;"
                  />
                  <div>
                    <h6><%= product.name %></h6>
                    <p>Quantity: <%= item.quantity %></p>
                    <p>Price: ₹<%= item.price %></p>
                  </div>
                </li>
              <% } else { %>
                <li class="list-group-item">
                  <p class="text-muted">Product details are not available for this item.</p>
                </li>
              <% } %>
            <% }); %>
          </ul>
        </div>
      </div>
    <% }); %>
  <% } else { %>
    <p class="text-center">No orders found.</p>
  <% } %>
</div>

<%- include("../../views/partials/user/footer") %>
